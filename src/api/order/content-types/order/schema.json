{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string"
    },
    "customerEmail": {
      "type": "email"
    },
    "orderState": {
      "type": "enumeration",
      "enum": [
        "pending, paid,shipped,cancelled"
      ]
    },
    "total": {
      "type": "decimal"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    }
  }
}
